<!-- 创建电影信息 区域模板 -->
<template name="movies">
    <block wx:for="{{movies}}" wx:key="{{movies.index}}">
    <view class='movie' bindtap='detail' id='{{item.id}}'>
      <view class='pic'>
        <image src="{{item.images.medium}}" mode='aspectFit' />
      </view>
      <view class='movie-info'>
        <view class='base-info'>
          <text>{{item.text}}</text>
        </view>
      </view>
    </view>
    <view class='hr'></view>
  </block>
</template>