/* pages/search/search.wxss */
@import"../movie/movie.wxss";
.search{
  display: flex;
  flex-direction: row;
  padding-left: 20px;
  padding-top: 20px;
  font-size: 14px;
}
.search button{
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 10px;
  border-left: 0px;
  background-color: #DD5E0E;
  color: white;
  text-shadow: black 0 1px;
}
.input{
  width: 60%;
  border: 1px solid #ccc;
  color: black;
  background-color: white;
  box-shadow: inset 0 0 10px #ccc;
}
.inputShow{
  padding-left: 20px;
  color: white;
  font-size: 12px;
  text-align: center;
}
.btnClick{
  background-color: orangered;
}