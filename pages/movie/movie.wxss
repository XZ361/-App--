/* pages/movie/movie.wxss */
Page{
  background-color:#3A3A3A;
}
.content{
  background-color: #3A3A3A;
  min-height: 100%；
}
.movie{
  /* 设置电影信息区域为弹性布局 */
  display: flex;
  /* 方向为横向 */
  flex-direction: row;
}
.pic image{
  width: 100px;
  height: 150px;
}
.movie-info{
  padding-left: 20px;
}
.base-info{
  color: #fff;
  padding-top: 20px;
  line-height: 20px;
  font-size: 12px;
}
.hr{
  height: 2px;
  width: 100%;
  background-color: black;
  border-top: white solid 1px;
  border-bottom: white solid 1px;
  opacity: 0.2;
}